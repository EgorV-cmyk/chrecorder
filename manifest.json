{
    "manifest_version": 2,
    "name": "Recorder",
    "version": "1.0",
    "description": "Application description",
    "permissions": ["windows", "audioCapture"],
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "icons": {
        "16": "icon_16.png",
        "32": "icon_32.png",
        "64": "icon_64.png",
        "128": "icon_128.png",
        "256": "icon_256.png",
        "512": "icon_512.png"
    }
}
